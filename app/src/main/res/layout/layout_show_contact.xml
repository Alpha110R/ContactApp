<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7ECF6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_logo" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Contact"
            android:textColor="#282F3A"
            android:textSize="40sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#282F3A"
        android:textSize="25sp"
        android:text="First Name: "
        android:gravity="center"
        android:layout_marginVertical="10dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/showContact_LBL_firstName"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#282F3A"
            android:textSize="25sp"
            android:text="first name"
            android:gravity="start|center"
            android:layout_marginVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#282F3A"
            android:textSize="25sp"
            android:text="Last Name: "
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="10dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/showContact_LBL_lastName"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#282F3A"
            android:textSize="25sp"
            android:text="last name"
            android:gravity="start|center"
            android:layout_marginVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#282F3A"
            android:textSize="25sp"
            android:text="Email: "
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="10dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/showContact_LBL_email"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#282F3A"
            android:textSize="25sp"
            android:text="email"
            android:gravity="center"
            android:layout_marginVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#282F3A"
            android:textSize="25sp"
            android:text="Phone Number: "
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="10dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/showContact_LBL_phoneNumber"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#282F3A"
            android:textSize="25sp"
            android:text="phone number"
            android:gravity="start|center"
            android:layout_marginVertical="10dp"/>
    </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/showContact_BTN_finish"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Back to list"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:backgroundTint="#4770B6"
            app:cornerRadius="10dp"
            android:layout_gravity="bottom|center" />


    </LinearLayout>
</RelativeLayout>